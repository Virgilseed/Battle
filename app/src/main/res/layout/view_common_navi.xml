<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ec_common_navi"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_45_dp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/ec_common_navi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:maxEms="11"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_18_sp"
        android:text="ssssssss" />

    <!--</LinearLayout>-->
    <ImageView
        android:id="@+id/ec_common_title_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ec_common_navi_title"
        android:visibility="gone" />

    <TextView
        android:id="@+id/ec_common_navi_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text=""
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ec_common_left_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:paddingLeft="@dimen/dimen_13_dp"
        android:paddingRight="@dimen/dimen_13_dp"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/ec_common_right_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:paddingLeft="@dimen/dimen_13_dp"
        android:paddingRight="@dimen/dimen_13_dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/ec_common_navi_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_13_dp"
        android:paddingRight="@dimen/dimen_13_dp"
        android:textSize="@dimen/dimen_15_sp"
        android:visibility="gone" />
</RelativeLayout>